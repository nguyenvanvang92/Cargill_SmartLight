<Content_pnx>:
    adaptive_height: True
    orientation: "vertical"
    height: app.height
    MDGridLayout:
        cols: 2
        MDBoxLayout:
            orientation: "vertical"
            MDIconButton:
                pos_hint: {'center_x': .5, 'center_y':.5}
                on_release:
                    print(app.height)
            MDTextFieldRound:
                size_hint: 0.7, 0.7
                icon_right: "clock"
                pos_hint: {'center_x': .5, 'center_y':.5}
            MDTextFieldRound:
                size_hint: 0.7, 0.7
                icon_right: "calendar"
                pos_hint: {'center_x': .5, 'center_y':.5}
        MDBoxLayout:
            orientation: "vertical"
            MDIconButton:
                pos_hint: {'center_x': .5, 'center_y':.5}
            MDTextFieldRound:
                icon_right: "clock"
                pos_hint: {'center_x': .5, 'center_y':.5}
                size_hint: 0.7,0.7
            MDTextFieldRound:
                icon_right: "calendar"
                pos_hint: {'center_x': .5, 'center_y':.5}
                size_hint: 0.7, 0.7

