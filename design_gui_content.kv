<Content_pnx>:
    adaptive_height: True
    orientation: "vertical"
    height: (app.height/12)*4
    MDCard:
        size_hint: 1, 0.9
        md_bg_color: 0.5,0.5,0,0.1
        MDBoxLayout:
            padding: dp(10)
            orientation: "horizontal"            
            MDIconButton:
                size_hint: 0.1, 1
                icon: "light_1.png" 
            MDBoxLayout:
                orientation: "vertical"
                size_hint: 0.65,1
                MDLabel:
                    text: "Đèn 2 Bên Vách\nLine 1"   
                    halign: "center"            
            MDIconButton:
                size_hint: 0.25, 1
                icon: "toggle-switch"       
                theme_text_color: 'Custom'
                text_color: 0,1,0,1     
                user_font_size: "50sp"         
    MDCard:
        size_hint: 1, 0.1
        md_bg_color: 1,0,0,1
        opacity: 0
        
