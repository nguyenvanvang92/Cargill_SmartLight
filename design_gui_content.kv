<Content_pnx>:
    adaptive_height: True
    orientation: "vertical"
    height: (app.height/7)*4
    MDCard:
        MDBoxLayout:
            orientation: "horizontal"
            MDIcon:
                icon: "ceiling-light"
                size_hint: 0.1, 1
                halign: "center"
            MDBoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Line 1"
                    halign: "center"
                MDLabel:
                    text: "Đèn Hai Bên Vách"
                    halign: "center"
            MDIconButton:
