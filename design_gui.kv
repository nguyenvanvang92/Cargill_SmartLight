<HomeScreen>:
    NavigationLayout:
        ScreenManager:
            id: Screen_login
            Screen:
                name: "login"
                FitImage:
                    orientation: 'horizontal'
                    source: 'background.png'
                    #pos_hint: {'center_x': .5, 'center_y':.8}
                    aspect_ratio: False
                    allow_stretch: True

                MDLabel:
                    text: 'Login'
                    pos_hint: {'center_y': .85}
                    font_style: 'H4'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color: 0,0,0,1
                MDTextField:
                    id: id_user_name
                    theme_text_color: "Custom"
                    text_color: 242/255, 217/255, 116/255,1
                    hint_text: 'Enter your email'
                    pos_hint: {'center_x': .5,'center_y': .6}
                    size_hint_x: .8
                MDTextField:
                    id: id_user_password
                    hint_text: 'Password'
                    pos_hint: {'center_x': .5,'center_y': .5}
                    size_hint_x: .8
                    password: True
                MDLabel:
                    id: id_loading
                    text:'Loading...'
                    pos_hint: {'center_y': .35}
                    font_style: 'H5'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color: 0,0,0,1
                    opacity: 0
                MDRoundFlatButton:
                    text: 'Log in'
                    pos_hint: {'center_x': .5, 'center_y': .2}
                    size_hint_x:.5
                    text_color: 27/255, 23/255, 23/255, 1
                    on_release: 
                        nav._refresh_tabs()
                        Screen_login.current = "nav"
            Screen:
                name: "nav"
                MDBoxLayout:
                    orientation: "vertical"
                    
                    MDToolbar:
                        title: 'GARGILL VN - SMART LED SYSTEM'
                        left_action_items: [["menu", lambda x: root.event_nav()]]
                        md_bg_color: 24/255, 71/255, 133/255, 1
                        specific_text_color: 1, 1, 1, 1                        
                    MDBottomNavigation:
                        id: nav
                        size_hint: 1,1
                        MDBottomNavigationItem:
                            text: "Controll" 
                            size_hint: 1,1
                            canvas:
                                Rectangle:
                                    #source: 'backgroud.jpg'
                                    size: self.size
                                    pos: self.pos
                            ScrollView:
                                do_scroll_x: False
                                do_scroll_y: True
                                MDGridLayout:
                                    id: scroll_controll
                                    adaptive_height: True
                                    size: (root.width, root.height)
                                    size_hint_x: None
                                    size_hint_y: None
                                    cols: 1
                                    spacing: 10
                                    padding: 50
                        MDBottomNavigationItem:
                            text: "Timer"
                            name: "Timer"
                            size_hint: 1,1
                            canvas:
                                Rectangle:
                                    #source: 'backgroud.jpg'
                                    size: self.size
                                    pos: self.pos
                            ScrollView:
                                do_scroll_x: False
                                do_scroll_y: True
                                MDGridLayout:
                                    id: scroll_timer
                                    adaptive_height: True
                                    size: (root.width, root.height)
                                    size_hint_x: None
                                    size_hint_y: None
                                    cols: 1
                                    spacing: 10
                                    padding: 50
                        MDBottomNavigationItem:
                            text: "Setting"
                            name: "Setting"
                            size_hint: 1,1
                            canvas:
                                Rectangle:
                                    #source: 'backgroud.jpg'
                                    size: self.size
                                    pos: self.pos
                            switch_tab: 
                                #"report"
                            MDLabel:                                
                                text: "Setting"
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical'
                spacing: '8dp'
                padding: '8dp'
                Image:
                    source:'info.png'
                MDLabel:
                    text: 'VU LE\nTECHNOLOGY CO., LTD'
                    color: 16/255,111/255,183/255,1
                    font_style: 'Button'
                    font_size: 80
                    halign: 'center'
                    size_hint_y: None
                MDLabel:
                    text: ''
                    font_size: 20
                    halign: 'center'
                    size_hint_y: None
                
                ScrollView:
                    MDList:                        
                        OneLineIconListItem:
                            text: 'contact information'
                            on_press:
                                import webbrowser
                                webbrowser.open('https://vuletech.com/')
                            IconLeftWidget:
                                icon: 'company.png'
                                size: 120,120
                        OneLineIconListItem:
                            text: 'assembling workshop'
                            on_press:
                                import webbrowser
                                webbrowser.open('https://goo.gl/maps/CuGAiw6upQFw9KSa7')
                            IconLeftWidget:
                                icon: 'map.png'
                                size: 120,120
                        OneLineIconListItem:
                            text:'email: info@vuletech.com'
                            IconLeftWidget:
                                icon: 'email.png'
                                size: 120,120
                        OneLineIconListItem:
                            text:'phone: (028) 3620 8179'
                            IconLeftWidget:
                                icon: 'phone.png'
                                size: 120,120
                        OneLineIconListItem:
                            text:'fax: (028) 3620 8178'
                            IconLeftWidget:
                                icon: 'fax.png'
                                size: 120,120



            
